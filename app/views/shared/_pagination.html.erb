<!-- app/views/shared/_pagination.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <%= select_tag :per, options_for_select(Paginatable::PER_PAGE_OPTIONS, per_page), class: "form-select w-auto", data: { controller: "pagination", action: "change->pagination#pagination", pagination: { path: request.path, page: current_page } } %>
  </div>

  <nav aria-label="Page navigation">
    <ul class="pagination">
      <% (0...total_pages).each do |page| %>
        <li class="page-item <%= 'active' if current_page == page %>">
          <%= link_to page + 1, url_for(page: page, per_page: per_page), class: "page-link", remote: true %>
        </li>
      <% end %>
    </ul>
  </nav>
</div>
